<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/detailpark"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:weightSum="1">

    <TextView
        android:id="@+id/dispo"

        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:textColor="#5d5d5d"
        android:textStyle="bold"
        android:layout_below="@+id/ville"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignRight="@+id/ville"
        android:layout_alignEnd="@+id/ville" />

    <TextView
        android:id="@+id/ville"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/adresse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/adresse"
        android:layout_alignEnd="@+id/adresse" />

    <TextView
        android:id="@+id/adresse"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:id="@+id/distance"
        android:textAlignment="center"
        android:layout_below="@+id/dispo"
        android:layout_alignRight="@+id/dispo"
        android:layout_alignEnd="@+id/dispo" />

</RelativeLayout>
